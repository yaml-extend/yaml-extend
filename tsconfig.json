{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2019",
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ES2022"],
    "sourceMap": true,
    "outDir": "types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": false,
    "stripInternal": true
  },
  "include": ["src", "types/yaml-augment.d.ts", "test"],
  "exclude": ["node_modules", "dist"]
}
