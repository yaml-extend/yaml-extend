{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ES2022"],
    "sourceMap": true,
    "outDir": "dist/types",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
